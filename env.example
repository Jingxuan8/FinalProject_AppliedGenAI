# ===========================================
# Voice-to-Voice AI Assistant Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp env.example .env
# ===========================================

# ===========================================
# REQUIRED - Web Search API (pick one)
# ===========================================
# Without this, web.search will NOT work!
# Option 1: Serper (recommended, 2500 free queries)
#   Get free API key at: https://serper.dev
WEB_SEARCH_PROVIDER=serper
SERPER_API_KEY=your_serper_api_key_here

# Option 2: Brave Search
#   Get API key at: https://brave.com/search/api
# WEB_SEARCH_PROVIDER=brave
# BRAVE_API_KEY=your_brave_api_key_here

# ===========================================
# REQUIRED - OpenAI API (for LLM reranking)
# ===========================================
# Without this, rerank=True will NOT work!
# Get API key at: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini

# ===========================================
# OPTIONAL: Vector Store (defaults work fine)
# ===========================================
VECTOR_STORE_PATH=./data/vector_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
COLLECTION_NAME=games_accessories

# ===========================================
# OPTIONAL: Cache Configuration
# ===========================================
CACHE_TTL_SECONDS=180
CACHE_MAX_SIZE=1000

# ===========================================
# OPTIONAL: MCP Server
# ===========================================
MCP_TRANSPORT=stdio
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8765

# ===========================================
# OPTIONAL: Logging
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# OPTIONAL: Rate Limiting
# ===========================================
RATE_LIMIT_RPM=30

